@model ConcordiaStation.WebApp.ViewModels.AllCommentViewModel
@foreach (var comment in Model.Comments.Reverse())
{
    <div class="d-flex flex-start">
        <div>
            <h6 class="fw-bold mb-1">@comment.Scientist.FamilyName @comment.Scientist.GivenName</h6>
            <div class="d-flex align-items-center mb-3">
                <p class="mb-0">
                    @comment.PublicationDate.
                    <span class="badge bg-primary">@comment.Phase.Title</span>
                </p>
            </div>
            <p class="mb-0">
                <em>~"@comment.Content"</em>
            </p>
        </div>
    </div>
    <hr />
}
